[push]
    default = matching
[core]
    excludesfile = ~/.gitignore
[pager]
    ; Enabling mouse scrolling for logs and diffs which can be long.
    ; -+ disables an option
    log = less -+F -+X
    diff = less -+F -+X
[alias]
    cm = commit
    co = checkout
    df = diff
    st = status
[pull]
    rebase = false
