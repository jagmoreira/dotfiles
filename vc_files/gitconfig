[push]
    default = matching
[core]
    ; Enabling mouse scrolling. -+ disables an option
    excludesfile = ~/.gitignore
[pager]
    ; Enabling mouse scrolling for logs and diffs which can be long.
    ; -+ disables an option
    log = less -+F -+X
    diff = less -+F -+X
[alias]
    stat = status
